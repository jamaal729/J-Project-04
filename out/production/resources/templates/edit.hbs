{{#partial "content"}}

{{#with entry}}
    <header>
        <div class="container">
            <div class="site-header">
                <a class="logo" href="/">SparkBlog</a>
                <a class="new-entry button button-round" href="/new"><i class="material-icons">create</i></a>
            </div>
        </div>
    </header>
    {{#if flashMessage}}
        <p id = flash-message>{{flashMessage}}</p>
    {{/if}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/entry/{{slug}}" method = "post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" value ="{{title}}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry">{{body}}</textarea>
                    <input type="submit" value="Save Entry" class="button">
                    <a href="/entry/{{slug}}" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
    <footer>


{{/with}}


{{/partial}}

{{> base.hbs}}

